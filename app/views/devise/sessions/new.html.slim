.row
  .medium-6.small-centered.columns
    .callout.primary
      h4 = t('titles.devise.sessions.new')
      = simple_form_for resource,
          as: resource_name,
          url: session_path(resource_name) do |f|

        .form-inputs
          = f.input :email, required: false, autofocus: true
          = f.input :password, required: false
          = f.input :remember_me, as: :boolean, label: t('actions.devise.remember_me')

        .form-actions
          .row
            .small-6.small-centered
              = f.button :submit, t('actions.devise.sign_in'), class: "float-center"